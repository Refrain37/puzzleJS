{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6", "DOM"],
    "paths": {
      "@remicro.js/*": ["./packages/*/src"],
      "*": ["./node_modules", "../../node_modules", "./packages/"]
    }
  },
  "exclude": ["node_modules", "**/dist/**/*", "examples"]
}
